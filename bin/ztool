#!/usr/bin/env python3
import sys
import os
import argparse
import importlib

def ArgumentParser():
    parser = argparse.ArgumentParser(
        description='This is a toolkit for handy scripts')
    parser.add_argument("command",help="command")
    
    args = parser.parse_args()
    return args


def main():
    args = ArgumentParser()

if __name__ == "__main__":
    if len(sys.argv)<2 or sys.argv[1] in ["-h","--help"]:
        sys.exit(main())
    if sys.argv[1] == "list":
        mod = "ListCommands"
    else:
        mod = sys.argv[1]
    
    locals()['my_module'] = __import__(mod)
    #sys.argv[0] = 'ztool '+ mod
    del sys.argv[0]
    sys.exit(my_module.main())
